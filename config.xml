<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.phonegap.example"
    version   = "1.0.0">
  <name>Lawpad App</name>
  <description>
    Lawpad Application
  </description>
  <preference name="phonegap-version" value="2.9.0" />

  <!-- Icons -->
  <icon src="lawpadicon.png" />

  <icon src="lawpadicon.png" width="57" height="57" />
  <icon src="lawpadicon.png" gap:platform="ios" width="72" height="72" />
  <icon src="lawpadicon.png" width="114" height="114" />

  <icon src="lawpadicon.png" gap:platform="android" gap:density="ldpi" />
  <icon src="lawpadicon.png" gap:platform="android" gap:density="mdpi" />
  <icon src="lawpadicon.png" gap:platform="android" gap:density="hdpi" />


  <!-- Splash Screens -->
  <preference name="orientation" value="default" />
  <preference name="fullscreen" value="true" />
  <preference name="webviewbounce" value="false" />
  <preference name="show-splash-screen-spinner" value="false" />

  <gap:splash src="lawpadsplash.png" />

  <gap:splash src="lawpadsplash.png" width="320" height="480" />
  <gap:splash src="splash/ios/Default_at_2x.png" width="640" height="960" />
  <gap:splash src="splash/ios/Default-Landscape.png" width="1024" height="768" />
  <gap:splash src="splash/ios/Default-Portrait.png" width="768" height="1024" />

  <gap:splash src="splash/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
  <gap:splash src="splash/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
  <gap:splash src="splash/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
  <gap:splash src="splash/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />

</widget>